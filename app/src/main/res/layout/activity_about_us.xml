<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xiaoyu.schoolelive.activities.AboutUsActivity">
    <include
        layout="@layout/include_toolbar2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/logo_one"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="我们每一个成员，都经过国家节操安全标准筛选，请用户放心使用，不会掉节操~"
            android:layout_gravity="center_horizontal"
            android:id="@+id/AboutUsText"
            android:layout_marginTop="20dp"/>
        <ImageView
            android:id="@+id/logo_two"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="110dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小雨科技"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/AboutUsBottom"/>

    </LinearLayout>
</LinearLayout>
